file = {:home/diogro/Dropbox/Mendeley//Jones, Arnold, B\"{u}rger - 2007 - The mutation matrix and the evolution of evolvability.pdf:pdf},
issn = {0014-3820},
journal = {Evolution},
keywords = {Analysis of Variance,Computer Simulation,Evolution,Genetic,Genetic Drift,Genetics,Models,Mutation,Mutation: genetics,Phenotype,Population,Selection},
month = apr,
