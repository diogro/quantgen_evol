number = {1},
pages = {459--71},
pmid = {12242254},
title = {{Joint effects of pleiotropic selection and stabilizing selection on the maintenance of quantitative genetic variation at mutation-selection balance.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=1462254\&tool=pmcentrez\&rendertype=abstract},
volume = {162},
