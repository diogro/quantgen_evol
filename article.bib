number = {5},
pages = {371--85},
pmid = {21462316},
title = {{Evolution of pleiotropy: epistatic interaction pattern supports a mechanistic model underlying variation in genotype-phenotype map.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3112255\&tool=pmcentrez\&rendertype=abstract},
